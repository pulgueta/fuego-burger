---
const navItems = [
  { href: "#menu", text: "Men√∫" },
  { href: "/locations", text: "Ubicaciones" },
];
---

<header class="fixed w-full z-50 bg-black/90 backdrop-blur-sm">
  <div class="container mx-auto px-4 py-4 flex items-center justify-between">
    <a
      href="/"
      class="text-2xl font-display font-bold text-fuego-red tracking-tight"
    >
      FUEGO BURGER
    </a>

    <nav>
      <ul class="flex gap-8">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="font-display text-lg hover:text-fuego-red transition-colors"
              >
                {item.text}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
